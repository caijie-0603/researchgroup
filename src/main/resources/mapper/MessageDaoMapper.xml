<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fifth.researchgroup.dao.MessageDao">

    <select id="findAllMessages" resultType="Message">
        select id,sender_id,title,content,send_time,type,is_audit from news_notice
    </select>

    <select id="findMessagesByType" parameterType="String" resultType="Message">
        select id,sender_id,title,content,send_time,type,is_audit from news_notice where type=#{type}
    </select>

    <insert id="addMessage" parameterType="Message" useGeneratedKeys="true" keyProperty="id">
        insert into news_notice (id,sender_id,title,content,type) values (#{id},#{sender_id},#{title},#{content},#{type})
    </insert>

    <delete id="deleteMessage" parameterType="int">
        delete from news_notice where id = #{id}
    </delete>

</mapper>